/* 容器全屏 */
.welcome-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 背景图与遮罩 */
.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -2;
}
.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(255,255,255,0.1), rgba(255,255,255,0.9));
  z-index: -1;
}

/* 内容布局 */
.content-box {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 100rpx;
}

.school-logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  margin-bottom: 40rpx;
}

.text-area {
  text-align: center;
  margin-bottom: 120rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  display: block;
  font-size: 32rpx;
  color: #666;
  letter-spacing: 2rpx;
}

/* 按钮样式 */
.start-btn {
  background: #0052D9; /* 广工蓝或科技蓝 */
  color: white;
  padding: 0 80rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  font-size: 34rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 82, 217, 0.3);
  border: none;
}

/* --- 动画定义 --- */
.fade-in-down {
  animation: fadeInDown 1s ease-out forwards;
  opacity: 0;
}
.fade-in-up {
  animation: fadeInUp 1s ease-out 0.5s forwards; /* 延迟0.5秒播放 */
  opacity: 0;
}
.pulse {
  animation: pulse 2s infinite;
}

@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-50rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(50rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}